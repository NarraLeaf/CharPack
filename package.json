{
  "name": "@narraleaf/charpack",
  "version": "0.1.0",
  "description": "CharPack is an image compression tool optimized for character illustrations. ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.js",
      "types": "./dist/browser/index.d.ts"
    }
  },
  "scripts": {
    "build:node": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js --external:sharp --external:glob",
    "build:browser": "esbuild src/browser/index.ts --bundle --platform=browser --format=esm --outfile=dist/browser/index.js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:dev": "npm run build:node && npm run build:browser && npm run build:types",
    "build": "npm run build:node -- --minify && npm run build:browser -- --minify && npm run build:types",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NarraLeaf/CharPack.git"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.4",
    "@types/pako": "^2.0.4",
    "esbuild": "^0.19.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "narraleaf",
    "charpack",
    "image",
    "compression",
    "character",
    "illustration"
  ],
  "author": "helloyork@icloud.com",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/NarraLeaf/CharPack/issues"
  },
  "dependencies": {
    "glob": "^10.5.0",
    "pako": "^2.1.0",
    "sharp": "^0.34.5"
  }
}
